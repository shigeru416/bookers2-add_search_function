<% if @user_or_book == "user"%>
    <h1>検索結果</h1>
    <table class="table">
    	<thead>
    		<tr>
                <th>Name</th>
                <th>Introduction</th>
                <th></th>
    		</tr>
    	</thead>
        <% @users.each do |user| %>
        <tdody>
            <tr>
                <td><%= link_to user_path(user.id) do %>
                        <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
                    <% end %>
                    <br>
                    <%= user.name %>
                </td>
                <td>
                    <%= user.introduction %>
                </td>
                <td><%=link_to "Show", user_path(user.id) %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
 
<% else @user_or_book == "book" %>
    <h1>検索結果</h1>
    <table class="table">
    	<thead>
    		<th>Title</th>
            <th>Opinion</th>
            <th></th>
    	</thead>
    <% @books.each do |book| %>
        <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
            </tr>
        </tbody>
    <% end %>
    </table>
<% end %>